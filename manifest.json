{
  "manifest_version": 3,
  "name": "Sharkbook AI Form Filler",
  "version": "1.0",
  "description": "AI-powered smart form auto-fill assistant by Sharkbook",
  "permissions": ["activeTab", "scripting", "sidePanel"],
  "host_permissions": [
    "https://sharkbook.org/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Sharkbook AI Form Filler",
    "default_icon": {
      "16": "icons/favicon.png",
      "48": "icons/favicon.png",
      "128": "icons/favicon.png"
    }
  },
  "icons": {
    "16": "icons/favicon.png",
    "48": "icons/favicon.png",
    "128": "icons/favicon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
