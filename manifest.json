{
  "manifest_version": 3,
  "name": "Sharkbook Chrome Extension",
  "version": "1.0",
  "description": "A basic Chrome Extension for Sharkbook",
  "permissions": ["activeTab", "scripting", "sidePanel"],
  "host_permissions": [
    "https://sharkbook.org/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sharkbook Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
